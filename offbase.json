{
  "bin": {
    "url": "https://github.com/fingertwiddler/app.git"
  },
  "lib": {
    "theme": {
      "url": "https://github.com/fingertwiddler/darktheme.git"
    },
    "rss": {
      "url": "https://github.com/fingertwiddler/rss.git"
    },
    "blog": {
      "url": "https://github.com/fingertwiddler/blog.git"
    }
  },
  "settings": {
    "events": {
      "publish": [
        "blog", "rss"
      ]
    },
    "SRC": "/home/src",
    "DEST": "/home/blog",
    "NAME": "Twiddler",
    "THEME": {
      "HOME": "/theme/index.hbs",
      "POST": "/theme/post.hbs"
    },
    "PAGE": {
      "CHUNK": 6
    },
    "FEED": {
      "BASE": "",
      "CHUNK": 10
    }
  },
  "customize": {
    "require.app.url": { "label": "App URL" },
    "require.theme.url": { "label": "Theme URL" },
    "settings.NAME": { "label": "Blog name" },
    "settings.PAGE.CHUNK": { "label": "Items per page", "type": "number" },
    "settings.FEED.BASE": { "label": "RSS Feed base URL" },
    "settings.FEED.CHUNK": { "label": "Number of posts in the RSS feed" }
  }
}
